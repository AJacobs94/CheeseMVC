<h1>Add Cheese</h1>

<form method="post">
    @foreach (var cheese in ViewBag.cheeses)
    {
    <div class="form-group">
        <label for="@cheese.CheeseId">@cheese.Name</label>
        <input class="form-control" name="cheeseIds" id="@cheese.CheeseId" type="text" />
    </div>
    <div class="form-group">
        <label for="@cheese.CheeseId">@cheese.Description</label>
        <input class="form-control" name="cheeseIds" id="@cheese.CheeseId" type="text" />
    </div>
    }

    <input type="submit" value="Edit Cheese" />

</form>
